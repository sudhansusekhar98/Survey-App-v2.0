@using SurveyApp.Models
@model IEnumerable<SurveyDetailsLocationModel>

@{
    ViewData["Title"] = "Survey Details";
    var index = 0;
}

<form>
    <div class="card">
        <div class="card-header bg-purple mb-3 py-2">
            <h6 class="text-white fs-4 pt-1">Survey Details</h6>
        </div>

        <div class="card-body">
            <div class="col-12">
                @if (TempData["ResultMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ResultMessage"]?.ToString()))
                {
                    <div class="alert alert-@TempData["ResultType"] alert-dismissible fade show" role="alert">
                        @Html.Raw(TempData["ResultMessage"])
                        <button type="button" class="btn-close btn-sm align-top" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>

            <div class="col-md-12">

                <div class="mb-3">
                    <span class="badge bg-purple me-2">
                        Survey : @(Model?.FirstOrDefault()?.SurveyName != null
                                                ? Model.First().SurveyName
                                                : "Survey Details")
                    </span>
                    <span class="badge bg-secondary mt-2">Location : 
                        @(Model?.FirstOrDefault()?.SurveyName != null
                                                ? Model.First().LocName
                                                : "Location Details")
                        </span>
                </div>
               

                <div class="accordion mt-4" id="accordionExample">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var gridData in Model)
                        {
                            var headingId = $"heading_{index}";
                            var collapseId = $"collapse_{index}";
                            <div class="card accordion-item">
                                <h2 class="accordion-header" id="@headingId">
                                    <button type="button"
                                            class="accordion-button collapsed"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#@collapseId"
                                            aria-expanded="false"
                                            aria-controls="@collapseId">

                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-cpu fs-2 text-primary me-3"></i>
                                            <span class="fw-semibold fs-5">
                                                @gridData.TypeName
                                                <span class="small text-muted"> (@gridData.ItemTypeID) </span>
                                            </span>
                                        </div>
                                    </button>
                                </h2>

                                <div id="@collapseId"
                                     class="accordion-collapse collapse"
                                     data-bs-parent="#accordionExample">
                                    <div class="accordion-body">

                                       @*  <div class="mb-2">
                                            <strong>Description:</strong> @gridData.TypeDesc
                                        </div> *@

                                        @if (gridData.ItemLists != null && gridData.ItemLists.Any())
                                        {
                                           var rowIndex = 1;
                                             
                                            @foreach (var item in gridData.ItemLists)
                                            {

                                                <div class="row mb-4">
                                                    <div class="card h-100 border-1 shadow-sm">
                                                        <div class="card-body d-flex flex-column">
                                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                                <h5 class="card-title mb-0">@item.ItemName</h5>
                                                                <span class="badge bg-light text-muted">ID: @item.ItemID</span>
                                                            </div>

                                                            <div class="row mb-2">
                                                                <div class="col-6">
                                                                    <p class="mb-1 small text-uppercase text-muted">Existing</p>
                                                                    <h6 class="mb-2">@item.ItemQtyExist</h6>

                                                                    <p class="mb-1 small text-uppercase text-muted">Required</p>
                                                                    <h6 class="mb-0">@item.ItemQtyReq</h6>
                                                                </div>

                                                                <div class="col-6 d-flex align-items-center justify-content-end">
                                                                    @if (!string.IsNullOrWhiteSpace(item.ImgPath))
                                                                    {
                                                                        <img src="@Url.Content(item.ImgPath)" alt="item image"
                                                                             class="img-fluid rounded" style="max-height:140px; object-fit:cover;"
                                                                             loading="lazy" />
                                                                    }
                                                                    else
                                                                    {
                                                                        <img src="~/img/elements/Noimage.png" alt="placeholder"
                                                                             class="img-fluid rounded" style="max-height:140px; object-fit:cover;"
                                                                             loading="lazy" />
                                                                    }
                                                                </div>
                                                            </div>

                                                            <p class="mb-2 text-muted small">@(!string.IsNullOrWhiteSpace(item.Remarks) ? item.Remarks : "No remarks")</p>

                                                            <div class="mt-auto d-flex gap-2">
                                                                <a href="@Url.Action("UpdateItem", "SurveyDetails", new { surveyId = gridData.SurveyID, locId = gridData.LocID, itemTypeID = @gridData.ItemTypeID, itemId = item.ItemID })"
                                                                   class="btn btn-sm btn-warning">
                                                                    <i class="bi bi-pencil me-2"></i> Edit
                                                                </a>

                                                              @*   <button type="button" class="btn btn-sm btn-outline-danger"
                                                                        onclick="confirmDeleteItem('@item.ItemID')">
                                                                    <i class="bi bi-trash"></i> Delete
                                                                </button> *@

                                                                <a class="btn btn-sm btn-outline-primary ms-auto"
                                                                   href="@Url.Action("ViewItem", "SurveyDetails", new { itemId = item.ItemID })">
                                                                    <i class="bi bi-eye"></i> View
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                                                              
                                                    rowIndex++;
                                            }
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("UpdateItem", "SurveyDetails", new { surveyId = gridData.SurveyID, locId = gridData.LocID, itemTypeID = @gridData.ItemTypeID, itemId =0 })"
                                               class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil me-2"></i> Add New
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>

                            index++;
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">No survey data found.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</form>

<div id="modalContainer"></div>

@section Scripts {
    <script>
        function openUserModal(button) {
            const userId = $(button).data("userid");
            $.get("/Users/GetUserModal", { id: userId }, function (html) {
                $("#modalContainer").html(html);
                const modal = new bootstrap.Modal(document.getElementById("viewDataModal"));
                modal.show();
            });
        }
    </script>

    <script>
        $(document).ready(function () {
            // If you use any table plugin, initialize here. Example DataTable:
            // $('#someTableId').DataTable(...);
        });
    </script>
}
