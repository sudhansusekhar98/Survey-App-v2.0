@model List<SurveyApp.Models.ItemTypeMasterModel>
@{
    ViewData["Title"] = "Device Type Master";
    var locId = ViewBag.LocId; 
    var surveyId = ViewBag.SelectedSurveyId;
    var surveyName = ViewBag.SelectedSurveyName;
}

<div class="alert alert-info mb-3">
    <strong>Location ID:</strong> @locId
    &nbsp; | &nbsp;
    <strong>Survey Name:</strong> @surveyName
    &nbsp; | &nbsp;
    <strong>Survey ID:</strong> @surveyId
</div>

<form asp-controller="SurveyCreation" asp-action="SaveItemType" method="post">
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card shadow mt-6">
                    <div class="card-header bg-purple mb-8 py-2">
                        <div class="row">
                            <div class="col-6">
                                <h6 class="text-white fs-4 pt-1">
                                    Select Device Types
                                </h6>
                            </div>
                            <div class="col-6 text-end">
                                <a href="@Url.Action("Index", "SurveyCreation")"
                                   class="btn btn-outline-danger text-white border-0 mx-0 my-0">
                                    <i class="bi bi-arrow-left-circle me-2"></i> Back To List
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row gx-4 gy-6">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="col-12 col-md-6 col-lg-4 mb-4">
                                    <div class="form-custom-floating p-3 shadow-sm rounded h-100 d-flex flex-column justify-content-between">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-cpu fs-2 text-primary me-3"></i>
                                            <span class="fw-semibold fs-5">@Model[i].TypeName</span>
                                        </div>
                                        <div class="mb-2 text-muted small">@Model[i].TypeDesc</div>
                                        <div class="mb-2"><span class="badge bg-info">@Model[i].GroupName</span></div>
                                        <div class="form-check">
                                            <input type="checkbox" name="selectedTypes" value="@Model[i].TypeName" class="form-check-input" id="checkbox_@i" />
                                            <label class="form-check-label" for="checkbox_@i">Select</label>
                                        </div>
                                        <input type="hidden" name="TypeDesc_@i" value="@Model[i].TypeDesc" />
                                        <input type="hidden" name="GroupName_@i" value="@Model[i].GroupName" />
                                        <input type="hidden" name="IsActive_@i" value="@Model[i].IsActive" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="card-footer mt-12">
                        <div class="row">
                            <div class="col text-end">
                                <button type="submit" class="btn btn-primary me-2"><i class="bi bi-check2-circle me-2"></i> Save Selection</button>
                                <a asp-controller="SurveyCreation" asp-action="SaveItemType" class="btn btn-danger"><i class="bi bi-slash-circle me-2"></i> Reset</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


