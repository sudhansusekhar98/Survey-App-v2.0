@{
    ViewData["Title"] = "Network Switch";
    var Items = new[] { "Multi SFP", "4 Port SFP", "2 Port SFP" };
}

<div class="container-fluid py-4" style="background:#f7f8fa; min-height:90vh;">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mt-4">
                <div class="container py-4">
                    <div class="card-header bg-purple py-2">
                        <div class="row">
                            <div class="col-6"><h6 class="text-white fs-4 pt-1">Network Switch</h6></div>
                            @* <div class="col-6 text-end"><h6 class="text-white fs-4 pt-1">@surveyName - @locID</h6></div> *@
                        </div>
                    </div>
                </div>

                @* <div class="card-header bg-purple py-2">
                    <div class="row">
                        <div class="col-6">
                            <h6 class="text-white fs-4 pt-1 mb-0"></h6>
                        </div>
                    </div>
                </div> *@
                <div class="card-body">
                    <p class="mb-4" style="color:#6c757d;">Configure and document network switch specifications.</p>
                    <form>
                        <div id="switch-list">
                            @for (int i = 0; i < Items.Length; i++)
                            {
                                <div class="card mb-3 border-0 shadow-sm" style="background:#fff;">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center justify-content-between mb-2">
                                            <div class="fw-semibold">@Items[i]</div>
                                            <div class="d-flex align-items-center">
                                                <button type="button" class="btn btn-danger btn-sm me-2 rounded-circle switch-qty-minus" data-index="@i" style="width:38px; height:38px;"><i class="bi bi-dash"></i></button>
                                                <span class="fw-bold switch-qty-value" id="switch-qty-@i" style="min-width:32px; text-align:center;">00</span>
                                                <button type="button" class="btn btn-success btn-sm ms-2 rounded-circle switch-qty-plus" data-index="@i" style="width:38px; height:38px;"><i class="bi bi-plus"></i></button>
                                            </div>
                                        </div>
                                        <label class="fw-semibold mb-2" >Remarks</label>
                                        <textarea class="form-control mb-2" rows="2" placeholder="e.g., Working fine" style="resize:none; "></textarea>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="card border-0 mb-3" style="background:#fafdff;">
                            <div class="card-body py-2">
                                <button type="button" class="btn btn-light border px-3 py-2 fw-semibold" id="add-port-btn"">
                                    <i class="bi bi-plus-lg me-2"></i> Add New Port
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        let qtyArr = [0, 0, 0];
        document.querySelectorAll('.switch-qty-plus').forEach(function (btn) {
            btn.addEventListener('click', function () {
                var idx = parseInt(btn.getAttribute('data-index'));
                qtyArr[idx]++;
                document.getElementById('switch-qty-' + idx).textContent = qtyArr[idx].toString().padStart(2, '0');
            });
        });
        document.querySelectorAll('.switch-qty-minus').forEach(function (btn) {
            btn.addEventListener('click', function () {
                var idx = parseInt(btn.getAttribute('data-index'));
                if (qtyArr[idx] > 0) qtyArr[idx]--;
                document.getElementById('switch-qty-' + idx).textContent = qtyArr[idx].toString().padStart(2, '0');
            });
        });

        document.getElementById('add-port-btn').addEventListener('click', function () {
            var idx = qtyArr.length;
            qtyArr.push(0);
            var container = document.getElementById('switch-list');
            var newCard = document.createElement('div');
            newCard.className = "card mb-3 border-0 shadow-sm";
            newCard.style.background = "#fafdff";
            newCard.innerHTML = `
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <input type="text" class="form-control fw-semibold" placeholder="Port Name e.g., 6 Port SFP" />
                        <button type="button" class="btn btn-link text-secondary ms-2 px-2 py-0"  title="Remove Port" onclick="this.closest('.card').remove();">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <span class="fw-semibold me-3" >Quantity</span>
                        <button type="button" class="btn btn-danger btn-sm me-2 rounded-circle switch-qty-minus" data-index="${idx}" style="width:38px; height:38px;"><i class="bi bi-dash"></i></button>
                        <span class="fw-bold switch-qty-value" id="switch-qty-${idx}"  min-width:32px; text-align:center;">00</span>
                        <button type="button" class="btn btn-success btn-sm ms-2 rounded-circle switch-qty-plus" data-index="${idx}" style="width:38px; height:38px;"><i class="bi bi-plus"></i></button>
                    </div>
                    <label class="fw-semibold mb-2"">Remarks</label>
                    <textarea class="form-control mb-2" rows="2" placeholder="e.g., Working fine" style="resize:none;"></textarea>
                </div>
            `;
            container.appendChild(newCard);

            // Attach event listeners to new buttons
            newCard.querySelector('.switch-qty-plus').addEventListener('click', function () {
                qtyArr[idx]++;
                document.getElementById('switch-qty-' + idx).textContent = qtyArr[idx].toString().padStart(2, '0');
            });
            newCard.querySelector('.switch-qty-minus').addEventListener('click', function () {
                if (qtyArr[idx] > 0) qtyArr[idx]--;
                document.getElementById('switch-qty-' + idx).textContent = qtyArr[idx].toString().padStart(2, '0');
            });
        });
    });
</script>
