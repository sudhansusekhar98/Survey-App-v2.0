@{
    ViewData["Title"] = "Cable";
    var cableTypes = new[] { "Cat 6 Outdoor", "Cat 6 Indoor", "OFC" };
}

<div class="container-fluid py-4" style="background:#f7f8fa; min-height:90vh;">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mt-4">
                <div class="container py-4">
                    <div class="card-header bg-purple py-2">
                        <div class="row">
                            <div class="col-6"><h6 class="text-white fs-4 pt-1">Cable</h6></div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="mb-4" style="color:#6c757d;">Document different types of cables and their quantities.</p>
                    <form id="cableForm">
                        <div id="cableList">
                            <!-- Initial cable row -->
                        </div>
                        <button type="button" class="btn btn-outline-primary mt-3" id="addCableBtn" style="border-style:dashed;">
                            <i class="bi bi-plus-lg"></i> Add Cable
                        </button>
                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-primary px-4" style="background: linear-gradient(90deg,#7c3aed,#5f1dbe); border:none;">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function createCableRow(idx, removable) {
            return `
                <div class=\"card mb-3 border-0 shadow-sm\" style=\"background:#fafdff;\">
                    <div class=\"card-body\">
                        <div class=\"row g-3 align-items-end\">
                            <div class=\"col-md-3\">
                                <label class=\"fw-semibold mb-1\">Cat 6 Outdoor</label>
                                <input type=\"number\" class=\"form-control\" min=\"0\" value=\"0\" />
                            </div>
                            <div class=\"col-md-3\">
                                <label class=\"fw-semibold mb-1\">Cat 6 Indoor</label>
                                <input type=\"number\" class=\"form-control\" min=\"0\" value=\"0\" />
                            </div>
                            <div class=\"col-md-3\">
                                <label class=\"fw-semibold mb-1\">OFC</label>
                                <input type=\"number\" class=\"form-control\" min=\"0\" value=\"0\" />
                            </div>
                            <div class=\"col-md-3\">
                                <div class=\"d-flex align-items-start\">
                                    <div class=\"flex-grow-1\">
                                        <label class=\"fw-semibold mb-1\">Remarks</label>
                                        <textarea class=\"form-control\" rows=\"2\" placeholder=\"e.g., Damaged during installation.\"></textarea>
                                    </div>
                                    ${removable ? `<button type=\"button\" class=\"btn btn-link text-danger ms-2 mt-4\" style=\"z-index:2;\" onclick=\"this.closest('.card').remove();\"><i class=\"bi bi-trash fs-5\"></i></button>` : ''}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        document.addEventListener('DOMContentLoaded', function () {
            var cableList = document.getElementById('cableList');
            cableList.innerHTML = createCableRow(0, false);
            var cableIdx = 1;
            document.getElementById('addCableBtn').addEventListener('click', function () {
                cableList.insertAdjacentHTML('beforeend', createCableRow(cableIdx++, true));
            });
        });
    </script>
}
