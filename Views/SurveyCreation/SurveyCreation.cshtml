@model SurveyApp.Models.SurveyModel

@{
    ViewData["Title"] = "Create Survey";
}

<form asp-controller="SurveyCreation" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card shadow mt-6">
                    <div class="card-header bg-purple mb-8 py-2">
                            <div class="row">
                            <div class="col-6">
                                <h6 class="text-white fs-4 pt-1">
                                    Create New Survey
                                </h6>
                            </div>
                            <div class="col-6 text-end">
                                <a href="javascript:void(0);"
                                   class="btn btn-outline-danger text-white border-0 mx-0 my-0"
                                   onclick="showBackConfirmModal('@Url.Action("Index", "SurveyCreation")','Unsaved changes will be lost. Do you want to continue?')">
                                    <i class="bi bi-arrow-left-circle me-2"></i> Back To List
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row gx-4 gy-6">
                            <div class="col-12">
                                @if (TempData["ResultMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ResultMessage"]?.ToString()))
                                {
                                    <div class="alert alert-@TempData["ResultType"] alert-dismissible fade show" role="alert">
                                        @Html.Raw(TempData["ResultMessage"])
                                        <button type="button" class="btn-close btn-sm align-top" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="SurveyId" type="number" class="form-control" placeholder=" " readonly>
                                    <label asp-for="SurveyId"></label>
                                   
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="SurveyName" type="text" class="form-control" placeholder=" " required>
                                    <label asp-for="SurveyName"></label>
                                    <span asp-validation-for="SurveyName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <select asp-for="RegionID" asp-items="@(ViewBag.Regions as SelectList)" class="form-select" placeholder=" ">
                                        <option value="">--Select Region--</option>
                                    </select>
                                    <label asp-for="RegionID"></label>
                                    <span asp-validation-for="RegionID" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <select asp-for="ImplementationType" asp-items="Model.ImplementationTypeOptions" class="form-select" placeholder=" ">
                                        <option value="">--Select--</option>
                                    </select>
                                    <label asp-for="ImplementationType"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="SurveyDate" type="date" class="form-control" placeholder=" ">
                                    <label asp-for="SurveyDate"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="SurveyTeamName" type="text" class="form-control" placeholder=" ">
                                    <label asp-for="SurveyTeamName"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="SurveyTeamContact" type="text" class="form-control" placeholder=" " maxlength="15">
                                    <label asp-for="SurveyTeamContact"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="AgencyName" type="text" class="form-control" placeholder=" ">
                                    <label asp-for="AgencyName"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="LocationSiteName" type="text" class="form-control" placeholder=" ">
                                    <label asp-for="LocationSiteName"></label>
                                </div>
                            </div>
                            
                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="CityDistrict" type="text" class="form-control" placeholder=" ">
                                    <label asp-for="CityDistrict"></label>
                                </div>
                            </div>

                           

                            <div class="col-12">
                                <div class="form-custom-floating">
                                    <textarea asp-for="ScopeOfWork" class="form-control" placeholder=" " rows="3" style="min-height: 100px;"></textarea>
                                    <label asp-for="ScopeOfWork"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="Latitude" type="number" step="any" class="form-control" placeholder=" ">
                                    <label asp-for="Latitude"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="Longitude" type="number" step="any" class="form-control" placeholder=" ">
                                    <label asp-for="Longitude"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="MapMarking" type="text" class="form-control" placeholder=" ">
                                    <label asp-for="MapMarking"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <select asp-for="SurveyStatus" asp-items="Model.StatusOptions" class="form-select" placeholder=" ">
                                        <option value="">--Select--</option>
                                    </select>
                                    <label asp-for="SurveyStatus"></label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer mt-12">
                        <div class="row">
                            <div class="col text-end">
                                <button type="submit" class="btn btn-primary me-2"><i class="bi bi-check2-circle me-2"></i> Submit</button>
                                <a asp-controller="SurveyCreation" asp-action="Create" class="btn btn-danger"><i class="bi bi-slash-circle me-2"></i> Reset</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function showBackConfirmModal(url, message) {
            let modal = document.getElementById("backConfirmModal");

            if (message) {
                modal.querySelector(".modal-body").innerText = message;
            }

            // set URL on continue button
            document.getElementById("confirmContinueBtn").setAttribute("href", url);

            // show modal
            var myModal = new bootstrap.Modal(modal, {
                backdrop: 'static',
                keyboard: false
            });
            myModal.show();
        }
    </script>
}
