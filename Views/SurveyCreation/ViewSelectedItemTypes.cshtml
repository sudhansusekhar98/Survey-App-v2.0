@model SurveyApp.Models.LocationItemTypeViewModel
@{
    ViewData["Title"] = "Selected Device Types";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <!-- Header Info Card -->
            <div class="alert alert-info mb-3 shadow-sm">
                <div class="row">
                    <div class="col-md-3">
                        <strong><i class="bi bi-geo-alt-fill me-2"></i>Location ID:</strong> @Model.LocId
                    </div>
                    <div class="col-md-4">
                        <strong><i class="bi bi-pin-map-fill me-2"></i>Location:</strong> @Model.LocationName
                    </div>
                    <div class="col-md-3">
                        <strong><i class="bi bi-clipboard-check me-2"></i>Survey:</strong> @Model.SurveyName
                    </div>
                    <div class="col-md-2">
                        <strong><i class="bi bi-hash me-2"></i>Survey ID:</strong> @Model.SurveyId
                    </div>
                </div>
            </div>

            <!-- Main Card -->
            <div class="card shadow mt-4">
                <div class="card-header bg-purple py-3">
                    <div class="row align-items-center">
                        <div class="col-6">
                            <h5 class="text-white mb-0">
                                <i class="bi bi-collection me-2"></i>Selected Device Types
                            </h5>
                        </div>
                        <div class="col-6 text-end">
                            <a asp-controller="SurveyCreation" 
                               asp-action="ItemTypeMaster" 
                               asp-route-locId="@Model.LocId"
                               asp-route-surveyId="@Model.SurveyId"
                               asp-route-SurveyName="@Model.SurveyName"
                               class="btn btn-outline-warning text-white border-0 mx-2 my-0">
                                <i class="bi bi-pencil-square me-2"></i> Edit Selection
                            </a>
                            <a asp-controller="SurveyCreation" 
                               asp-action="Index"
                               class="btn btn-outline-danger text-white border-0 mx-0 my-0">
                                <i class="bi bi-arrow-left-circle me-2"></i> Back To List
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (Model.SelectedItemTypes != null && Model.SelectedItemTypes.Any())
                    {
                        <!-- Accordion for Selected Item Types -->
                        <div class="accordion accordion-flush" id="itemTypesAccordion">
                            @for (int i = 0; i < Model.SelectedItemTypes.Count; i++)
                            {
                                var itemType = Model.SelectedItemTypes[i];
                                var accordionId = $"accordion-item-{i}";
                                var collapseId = $"collapse-{i}";
                                var isFirst = i == 0;

                                <div class="accordion-item mb-3 border rounded">
                                    <h2 class="accordion-header" id="@accordionId">
                                        <button class="accordion-button @(isFirst ? "" : "collapsed")" 
                                                type="button" 
                                                data-bs-toggle="collapse" 
                                                data-bs-target="#@collapseId" 
                                                aria-expanded="@(isFirst ? "true" : "false")" 
                                                aria-controls="@collapseId">
                                            <div class="d-flex align-items-center w-100">
                                                <i class="bi bi-cpu fs-4 text-primary me-3"></i>
                                                <div class="flex-grow-1">
                                                    <span class="fw-bold fs-5">@itemType.TypeName</span>
                                                    <span class="badge bg-info ms-2">@itemType.GroupName</span>
                                                </div>
                                            </div>
                                        </button>
                                    </h2>
                                    <div id="@collapseId" 
                                         class="accordion-collapse collapse @(isFirst ? "show" : "")" 
                                         aria-labelledby="@accordionId" 
                                         data-bs-parent="#itemTypesAccordion">
                                        <div class="accordion-body bg-light">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <h6 class="text-muted mb-3">
                                                        <i class="bi bi-info-circle me-2"></i>Description
                                                    </h6>
                                                    <p class="mb-3">
                                                        @if (!string.IsNullOrWhiteSpace(itemType.TypeDesc))
                                                        {
                                                            @itemType.TypeDesc
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted fst-italic">No description available</span>
                                                        }
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row mt-3">
                                                <div class="col-md-4">
                                                    <div class="d-flex align-items-center">
                                                        <i class="bi bi-calendar-check me-2 text-success"></i>
                                                        <div>
                                                            <small class="text-muted d-block">Created On</small>
                                                            <strong>@itemType.CreatedOn.ToString("dd MMM yyyy")</strong>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="d-flex align-items-center">
                                                        <i class="bi bi-person-check me-2 text-primary"></i>
                                                        <div>
                                                            <small class="text-muted d-block">Created By</small>
                                                            <strong>@itemType.CreatedBy</strong>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="d-flex align-items-center">
                                                        @if (itemType.IsActive)
                                                        {
                                                            <i class="bi bi-check-circle-fill me-2 text-success"></i>
                                                            <span class="badge bg-success">Active</span>
                                                        }
                                                        else
                                                        {
                                                            <i class="bi bi-x-circle-fill me-2 text-danger"></i>
                                                            <span class="badge bg-danger">Inactive</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Summary Card -->
                        <div class="alert alert-success mt-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-check2-circle fs-3 me-3"></i>
                                <div>
                                    <h6 class="mb-1">Total Selected Device Types</h6>
                                    <strong class="fs-4">@Model.SelectedItemTypes.Count</strong> types selected for this location
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-muted mb-3 d-block"></i>
                            <h5 class="text-muted mb-3">No Device Types Selected</h5>
                            <p class="text-muted mb-4">You haven't selected any device types for this location yet.</p>
                            <a asp-controller="SurveyCreation" 
                               asp-action="ItemTypeMaster" 
                               asp-route-locId="@Model.LocId"
                               asp-route-surveyId="@Model.SurveyId"
                               asp-route-SurveyName="@Model.SurveyName"
                               class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i> Select Device Types
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section PageStyles {
    <style>
        .accordion-button:not(.collapsed) {
            background-color: #f8f9fa;
            color: #495057;
        }
        .accordion-button:focus {
            box-shadow: none;
            border-color: rgba(0,0,0,.125);
        }
        .accordion-item {
            border: 1px solid #dee2e6;
        }
        .bg-purple {
            background-color: #6f42c1 !important;
        }
    </style>
}
