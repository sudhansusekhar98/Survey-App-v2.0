@{
    ViewData["Title"] = "UPS";
    var upsTypes = new[] { "Online UPS", "Offline UPS", "Line-Interactive UPS" };
}

<div class="container-fluid py-4" style="background:#f7f8fa; min-height:90vh;">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mt-4">
                <div class="container py-4">
                    <div class="card-header bg-purple py-2">
                        <div class="row">
                            <div class="col-6"><h6 class="text-white fs-4 pt-1">UPS</h6></div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p class="mb-4" style="color:#6c757d;">Configure and document uninterruptible power supply specifications.</p>
                    <form>
                        @for (int i = 0; i < upsTypes.Length; i++)
                        {
                            <div class="card mb-4 border-0 shadow-sm" style="background:#fafdff;">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <div class="fw-semibold fs-5">@upsTypes[i]</div>
                                        <div class="d-flex align-items-center">
                                            <button type="button" class="btn btn-danger btn-sm me-2 rounded-circle ups-qty-minus" data-index="@i" style="width:38px; height:38px; background:#ffe5e5;"><i class="bi bi-dash"></i></button>
                                            <span class="fw-bold ups-qty-value" id="ups-qty-@i" style="min-width:32px; text-align:center; color:#233;">00</span>
                                            <button type="button" class="btn btn-success btn-sm ms-2 rounded-circle ups-qty-plus" data-index="@i" style="width:38px; height:38px; background:#e5ffe5;"><i class="bi bi-plus"></i></button>
                                        </div>
                                    </div>
                                    <label class="fw-semibold mb-2">Remarks</label>
                                    <textarea class="form-control mb-2" rows="2" placeholder="e.g., Working fine, requires maintenance." style="resize:none;"></textarea>
                                </div>
                            </div>
                        }
                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-primary px-4" style="background: linear-gradient(90deg,#7c3aed,#5f1dbe); border:none;">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let qtyArr = [0, 0, 0];
            document.querySelectorAll('.ups-qty-plus').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var idx = parseInt(btn.getAttribute('data-index'));
                    qtyArr[idx]++;
                    document.getElementById('ups-qty-' + idx).textContent = qtyArr[idx].toString().padStart(2, '0');
                });
            });
            document.querySelectorAll('.ups-qty-minus').forEach(function (btn) {
                btn.addEventListener('click', function () {
                    var idx = parseInt(btn.getAttribute('data-index'));
                    if (qtyArr[idx] > 0) qtyArr[idx]--;
                    document.getElementById('ups-qty-' + idx).textContent = qtyArr[idx].toString().padStart(2, '0');
                });
            });
        });
    </script>
}
